    private int userId;
    private bool esAdmin;

    // ✨ Paginación
    private int paginaActual = 1;
    private int registrosPorPagina = 5;
    private int TotalPaginas => (int)Math.Ceiling((double)(registros?.Count ?? 0) / registrosPorPagina);

    protected override async Task OnInitializedAsync()
    {
        var token = await JS.InvokeAsync<string>("sessionStorage.getItem", "authToken");
        if (string.IsNullOrEmpty(token))
        {
            Navigation.NavigateTo("/");
            return;
        }

        await ObtenerUsuarioLogueado();
        await CargarListaServicios();
        await CargarRegistros();
    }

    private async Task CargarListaServicios()
    {
        try
        {
            var token = await JS.InvokeAsync<string>("sessionStorage.getItem", "authToken");
            Http.DefaultRequestHeaders.Authorization =
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            listaServicios = new List<ServicioDTO>();
            int pagina = 1;
            int limite = 50; // o el límite que tenga tu API
            bool hayMas = true;

            while (hayMas)
            {
                var respuesta = await Http.GetFromJsonAsync<PaginacionDTO>(
                    $"https://1xbfjn6k-8081.use.devtunnels.ms/servicios?page={pagina}&limit={limite}"
                );

                if (respuesta != null && respuesta.Data.Any())
                {
                    listaServicios.AddRange(respuesta.Data);
                    pagina++;
                }
                else
                {
                    hayMas = false;
                }
            }
        }
        catch (Exception ex)
        {
            mensaje = $"🚨 Error al cargar lista de servicios: {ex.Message}";
        }
    }

    // Clase auxiliar para paginación
    public class PaginacionDTO
    {
        [JsonPropertyName("data")]
        public List<ServicioDTO> Data { get; set; } = new List<ServicioDTO>();

        [JsonPropertyName("total")]
        public int Total { get; set; }

        [JsonPropertyName("page")]
        public int Page { get; set; }

        [JsonPropertyName("limit")]
        public int Limit { get; set; }
    }



