        [JsonPropertyName("precio")]
        public string Precio { get; set; }
    }

    public class TrabajadorDTO
    {
        [JsonPropertyName("id")] public int Id { get; set; }
        [JsonPropertyName("nombre")] public string Nombre { get; set; }
    }
}

