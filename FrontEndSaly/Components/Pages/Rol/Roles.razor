@using System.Text.Json.Serialization

@page "/rol/roles"

<PageTitle>Roles</PageTitle>

@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS

<h3 class="form-title">Gestión de Roles</h3>

@if (roles == null)
{
    <p class="loading-text">⏳ Cargando roles...</p>
}
else if (!roles.Any())
{
    <p class="no-data">⚠️ No hay roles registrados.</p>
}
else
{
    <div class="roles-table-container">
        <table class="table styled-table mt-3">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre del Rol</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rol in roles)
                {
                    <tr>
                        <td>@rol.Id</td>
                        <td>@rol.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (!string.IsNullOrEmpty(mensaje))
{
    <div class="alert mensaje">@mensaje</div>
}

<style>
    /* 🔹 Título */
    .form-title {
        font-family: 'Lilita One', cursive;
        font-size: 2rem;
        font-weight: bold;
        color: #222;
        margin-bottom: 2rem;
        text-align: center;
    }

    /* 🔹 Mensajes */
    .loading-text, .no-data {
        text-align: center;
        font-size: 1.1rem;
        font-weight: bold;
        margin-top: 1rem;
    }

    .loading-text {
        color: #6f42c1;
    }

    .no-data {
        color: #dc3545;
    }

    /* 🔹 Contenedor */
    .roles-table-container {
        width: 100%;
        margin: 0 auto;
        padding: 1.5rem;
        background-color: #fdf2ff; /* fondo suave */
        border-radius: 16px;
        box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        overflow-x: auto;
    }

    /* 🔹 Tabla */
    .styled-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        font-weight: 500;
        color: #222;
    }

        .styled-table th, .styled-table td {
            padding: 0.9rem 1.2rem;
            text-align: left;
            border-bottom: 2px solid #b57edc;
        }

        .styled-table thead {
            background-color: #d8b4f8; /* morado claro */
            color: #111;
            font-weight: bold;
        }

        .styled-table tbody tr:hover {
            background-color: #f5e1ff;
            transition: 0.2s;
        }

    /* 🔹 Mensaje final */
    .mensaje {
        font-weight: bold;
        margin-top: 1rem;
        text-align: center;
        color: #6f2c6f;
    }
</style>

@code {
    private List<RolDTO> roles;
    private string mensaje;

    protected override async Task OnInitializedAsync()
    {
        var token = await JS.InvokeAsync<string>("sessionStorage.getItem", "authToken");
        if (string.IsNullOrEmpty(token))
        {
            Navigation.NavigateTo("/");
            return;
        }

        await CargarRolesAsync();
    }

    private async Task CargarRolesAsync()
    {
        try
        {
            var token = await JS.InvokeAsync<string>("sessionStorage.getItem", "authToken");
            Http.DefaultRequestHeaders.Authorization =
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            roles = await Http.GetFromJsonAsync<List<RolDTO>>(
                "https://1xbfjn6k-8080.use.devtunnels.ms/usuarioslist/roles"
            );
        }
        catch (Exception ex)
        {
            mensaje = $"🚨 Error al cargar roles: {ex.Message}";
        }
    }

    public class RolDTO
    {
        [JsonPropertyName("id")]
        public int Id { get; set; }

        [JsonPropertyName("name")]
        public string Name { get; set; }
    }
}




