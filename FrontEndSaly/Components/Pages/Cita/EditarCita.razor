@page "/cita/editar/{id:int}"
@using System.Text.Json.Serialization
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>✏️ Editar Cita</PageTitle>

<h3 class="form-title">Editar Cita</h3>

@if (cita == null)
{
    <p class="mensaje">Cargando datos de la cita...</p>
}
else
{
    <EditForm Model="@cita" OnValidSubmit="@GuardarCambios" class="login-form">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Nombre del Cliente</label>
            <InputText class="form-control styled-input" @bind-Value="cita.NombreCliente" />
        </div>

        <div class="mb-3">
            <label class="form-label">Teléfono del Cliente</label>
            <InputText class="form-control styled-input" @bind-Value="cita.TelefonoCliente" />
        </div>

        <div class="mb-3">
            <label class="form-label">Fecha y Hora</label>
            <InputText class="form-control styled-input" type="datetime-local"
                       value="@cita.FechaHora.ToString("yyyy-MM-ddTHH:mm")"
                       @onchange="OnFechaHoraChanged" />
        </div>

        <div class="mb-3">
            <label class="form-label">Trabajador</label>
            <InputSelect class="form-control styled-input" @bind-Value="cita.NombreTrabajador">
                <option value="">-- Selecciona un trabajador --</option>
                @if (trabajadores != null)
                {
                    @foreach (var t in trabajadores)
                    {
                        <option value="@t.Username">@t.Username</option>
                    }
                }
            </InputSelect>
        </div>

        <div class="mb-3">
            <label class="form-label">Servicio</label>
            <InputSelect class="form-control styled-input" @bind-Value="cita.IdServicio">
                <option value="">-- Selecciona un servicio --</option>
                @if (servicios != null)
                {
                    @foreach (var s in servicios)
                    {
                        <option value="@s.Id">@s.Nombre_Servicio</option>
                    }
                }
            </InputSelect>
        </div>

        <div class="d-flex mt-3">
            <button type="submit" class="btn styled-btn primary">💾 Guardar Cambios</button>
            <button type="button" class="btn styled-btn secondary ms-2" @onclick="Volver">↩️ Cancelar</button>
        </div>
    </EditForm>
}

@if (!string.IsNullOrEmpty(mensaje))
{
    <p class="mensaje">@mensaje</p>
}

<style>
